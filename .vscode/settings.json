{
    "standard.autoFixOnSave": true,
    "standard.enable": true,
    "standard.validate": [
        "javascript"
    ],
    "standard.options": {
        "globals": [
            "$",
            "jQuery",
            "fetch",
            "requestAnimationFrame"
        ],
        "ignore": [
            "node_modules/**"
        ]
    },
    "standard.workingDirectories": [
        "src/**/*.js",
        "example/**/*.js"
    ],
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": false,
    "editor.tabSize": 2
}